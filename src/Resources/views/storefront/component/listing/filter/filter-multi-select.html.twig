{% sw_extends '@parent/storefront/component/listing/filter/filter-multi-select.html.twig' %}

{% block component_filter_multi_select_toggle %}
	<div class="filter-label property-label btn{% if sidebar %} btn-block{% endif %}" aria-expanded="false" {% if sidebar %} data-toggle="collapse" data-target="#{{ filterItemId }}" {% else %} data-toggle="dropdown" data-offset="0,8" aria-haspopup="true" {% endif %}>

		{% block component_filter_multi_select_display_name %}
			<div class="filter-name">
				{{ displayName }}
			</div>
		{% endblock %}

		{% block component_filter_multi_select_count %}
			<span class="filter-multi-select-count filter-count"></span>
		{% endblock %}

		{% block component_filter_multi_select_toggle_icon %}
			{% sw_icon 'arrow-medium-down' style {
                        'pack': 'solid', 'size': 'xs', 'class': 'filter-panel-item-toggle'
                    } %}
		{% endblock %}
	</div>
{% endblock %}

{% block component_filter_multi_select_dropdown %}
	<div class="{% if sidebar %} collapse1{% else %} dropdown-menu1 custom-dropdown{% endif %}" id="{{ filterItemId }}">
		{% block component_filter_multi_select_list %}
			<ul class="filter-multi-select-list">
				{% for element in elements %}
					{% block component_filter_multi_select_list_item %}
						<li class="filter-multi-select-list-item">
							{% block component_filter_multi_select_list_item_inner %}
								{% sw_include '@Storefront/storefront/component/listing/filter/filter-multi-select-list-item.html.twig' %}
							{% endblock %}
						</li>
					{% endblock %}
				{% endfor %}
			</ul>
		{% endblock %}
	</div>

	<style>
		{
			# .dropdown {
				position: unset;
			} #
		}

		.custom-dropdown {
			display: block !important;
			border: none;
			position: unset;
		}

		.property-label {
			text-align: left;
			padding: 0;
		}

		.filter-count {
			border-radius: 4px;
			background: #28a745;
			color: #fff;
			width: 20px;
			line-height: 20px;
			text-align: center;
      margin: auto;

		}
	</style>
{% endblock %}
