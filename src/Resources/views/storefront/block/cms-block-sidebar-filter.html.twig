{% sw_extends '@parent/storefront/block/cms-block-sidebar-filter.html.twig' %}

{% block block_sidebar_filter %}
	{% if activeRoute != 'frontend.home.page' %}
		{% set element = block.slots.getSlot('content') %}
		{% set columns = 1 %}

		<div class="col-12" data-cms-element-id="{{ element.id }}" style="{% if activeRoute != 'frontend.all.product' %}margin-top: 2rem{% endif %}"
		>
			{% block block_sidebar_filter_inner %}
				{% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
			{% endblock %}
		</div>
	{% endif %}
{% endblock %}
